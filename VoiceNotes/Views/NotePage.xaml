<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceNotes.Views.NotePage"
             Title="Mis Notas">
    <VerticalStackLayout>
        <Label 
            Text="VoiceNotes"
            FontSize="28"
            HorizontalOptions="Center"/>
        <Button
            Text="➕ Nueva nota por voz"
            Command="{Binding NewNoteCommand}"/>
        <CollectionView ItemsSource="{Binding Notes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="8">
                        <StackLayout>
                            <Label Text="{Binding Text}" FontSize="16"/>
                            <Label Text="{Binding Created, StringFormat='Creada el {0:dd/MM/yyyy HH:mm}'}" FontSize="12" TextColor="Gray"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <Label 
                    Text="No hay notas todavía"
                    HorizontalOptions="Center"/>
            </CollectionView.EmptyView>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>