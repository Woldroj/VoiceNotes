<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceNotes.Views.NotePage"
             Title="VoiceNotes">

    <VerticalStackLayout Spacing="10" Padding="15">

        <Label Text="ðŸŽ¤ VoiceNotes"
               FontSize="30"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <Button Text="âž• Nueva nota por voz"
                Command="{Binding NewNoteCommand}"
                BackgroundColor="#4F46E5"
                TextColor="White"
                CornerRadius="12"/>
        <Entry Placeholder="ðŸ” Buscar nota..."
               Text="{Binding SearchText}"
               Margin="0,5"/>
        <Button Text="ðŸŽ¤ Buscar por voz"
                Command="{Binding VoiceSearchCommand}"
                BackgroundColor="#16A34A"
                TextColor="White"
                CornerRadius="12"/>

        <CollectionView ItemsSource="{Binding FilteredNotes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12"
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True"
                           BackgroundColor="Black">

                        <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">

                            <Label Grid.Column="0"
                                   Grid.Row="0"
                                   Text="{Binding Text}"
                                   FontSize="16"
                                   LineBreakMode="WordWrap"/>

                            <Label Grid.Column="0"
                                   Grid.Row="1"
                                   Text="{Binding Created, StringFormat='Creada: {0:dd/MM/yyyy HH:mm}'}"
                                   FontSize="12"
                                   TextColor="Gray"/>

                            <!-- BotÃ³n editar -->
                            <Button Grid.Column="1"
                                    Grid.RowSpan="2"
                                    Text="âœï¸"
                                    FontSize="18"
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditNoteCommand}"
                                    CommandParameter="{Binding .}"/>

                            <!-- BotÃ³n borrar -->
                            <Button Grid.Column="2"
                                    Grid.RowSpan="2"
                                    Text="ðŸ—‘ï¸"
                                    FontSize="18"
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteNoteCommand}"
                                    CommandParameter="{Binding .}"/>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <Label Text="No hay notas todavÃ­a"
                       HorizontalOptions="Center"
                       FontSize="16"
                       TextColor="Gray"/>
            </CollectionView.EmptyView>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
